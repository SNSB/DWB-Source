<Window x:Class="WpfSamplingPlotPage.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GIS Editor Settings" Height="470" Width="645" Name="GISEditorSettings" Icon="/WpfSamplingPlotPage;component/Settings.ico" ResizeMode="NoResize" Background="Cornsilk">
    <Grid Background="Cornsilk" Height="430" Width="620" ClipToBounds="True" Name="gridControlSettings">
        <Label Height="20" Margin="12,10,0,0" Name="labelShapeFileReadFormat" Padding="0" VerticalAlignment="Top" VerticalContentAlignment="Top" HorizontalAlignment="Left" Width="324">Format of ArvView Shapes input files:</Label>
        <Label Height="20" Margin="12,95,0,0" Name="labelShapeFileFormats" VerticalAlignment="Top" Padding="0" VerticalContentAlignment="Top" HorizontalAlignment="Left" Width="324">Save Shapes in following file formats:</Label>
        <CheckBox Margin="32,115,0,0" Name="checkBoxShapeFileFormatSQL" Checked="checkBoxShapeFileFormatSQL_Checked" IsChecked="True" VerticalContentAlignment="Top" Height="20" VerticalAlignment="Top" Padding="5,0,0,0" HorizontalAlignment="Left" Width="304">MS SQL GeoObjects (.shp1)</CheckBox>
        <CheckBox Height="20" Margin="32,135,0,0" Name="checkBoxShapeFileFormatArcView" VerticalAlignment="Top" VerticalContentAlignment="Top" Padding="5,0,0,0" Checked="checkBoxShapeFileFormatArcView_Checked" HorizontalAlignment="Left" Width="304">ArcView shape file (.shp, .shx, .dbf)</CheckBox>
        <CheckBox Height="20" Margin="32,155,0,0" Name="checkBoxShapeFileFormatImport" VerticalAlignment="Top" VerticalContentAlignment="Top" Padding="5,0,0,0" Checked="checkBoxShapeFileFormatImport_Checked" HorizontalAlignment="Left" Width="304">Tab separated text file (.txt)</CheckBox>
        <CheckBox Margin="32,221,0,0" Name="checkBoxImageFileFormatGlopus" Padding="5,0,0,0" Checked="checkBoxImageFileFormatGlopus_Checked" Visibility="Collapsed" IsChecked="False" HorizontalAlignment="Left" Width="304" Height="20" VerticalAlignment="Top">Glopus Calibration File (.kal)</CheckBox>
        <Label Margin="13,359,0,0" Name="labelAltitude" Padding="0" VerticalContentAlignment="Top" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="324">Altitude for GeoObjects:</Label>
        <CheckBox IsEnabled="True" Margin="32,379,0,0" Name="checkBoxGetAltitude" SnapsToDevicePixels="False" Padding="5,0,0,0" Checked="checkBoxGetAltitude_Checked" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="304">Get altitude from geonames server</CheckBox>
        <Button Height="22" Margin="355,375.98,0,0" Name="buttonOK" VerticalAlignment="Top" Click="buttonOK_Click" IsDefault="True" HorizontalAlignment="Left" Width="65">OK</Button>
        <Button Height="22" Margin="435,375.98,0,0" Name="buttonCancel" VerticalAlignment="Top" Click="buttonCancel_Click" IsCancel="True" HorizontalAlignment="Left" Width="65">Cancel</Button>
        <Label Height="20" Margin="13,181,0,0" Name="labelImageCoordFileFormats" VerticalAlignment="Top" VerticalContentAlignment="Top" Padding="0" HorizontalAlignment="Left" Width="324">Save Image Coordinates in following file formats:</Label>
        <CheckBox Margin="32,201,0,0" Name="checkBoxImageFileFormatXml" IsChecked="True" IsEnabled="False" Padding="5,0,0,0" Checked="checkBoxImageFileFormatXml_Checked" HorizontalAlignment="Left" Width="304" Height="20" VerticalAlignment="Top">Image XML Coordinates File (.xml)</CheckBox>
        <Label Margin="13,246,0,0" Name="labelWorkingArea" Height="20" VerticalAlignment="Top" Padding="0" VerticalContentAlignment="Top" HorizontalAlignment="Left" Width="300">Working Area:</Label>
        <CheckBox Margin="32,266,0,0" Name="checkBoxSaveWorkingArea" Padding="5,0,0,0" Checked="checkBoxSaveWorkingArea_Checked" Unchecked="checkBoxSaveWorkingArea_Unchecked" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="304">Save Working Area as a screen shot (.png)</CheckBox>
        <Label Height="20" HorizontalAlignment="Left" Margin="342,10,0,0" Name="labelStrokeThickness" VerticalAlignment="Top" Width="266" Padding="0">Stroke Thickness:</Label>
        <Slider Height="10" Margin="460,33,0,0" Name="sliderStrokeThicknessPoint" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" ValueChanged="sliderStrokeThicknessPoint_ValueChanged" MouseDoubleClick="sliderStrokeThicknessPoint_MouseDoubleClick" Cursor="Hand" Panel.ZIndex="1" />
        <Slider Height="10" Margin="460,53,0,0" Name="sliderStrokeThicknessLine" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" ValueChanged="sliderStrokeThicknessLine_ValueChanged" MouseDoubleClick="sliderStrokeThicknessLine_MouseDoubleClick" Panel.ZIndex="1" />
        <Slider Height="10" Margin="460,73,0,0" Name="sliderStrokeThicknessArea" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" ValueChanged="sliderStrokeThicknessArea_ValueChanged" MouseDoubleClick="sliderStrokeThicknessArea_MouseDoubleClick" Panel.ZIndex="1" />
        <Label Margin="362,30,0,0" Name="labelStrokeThicknessPoint" HorizontalAlignment="Left" Width="40" Padding="0" VerticalContentAlignment="Top" Height="16" VerticalAlignment="Top">Point</Label>
        <Label HorizontalAlignment="Left" Margin="362,50,0,0" Name="labelStrokeThicknessLine" Width="40" Padding="0" Height="16" VerticalAlignment="Top" VerticalContentAlignment="Top">Line</Label>
        <Label Height="16" HorizontalAlignment="Left" Margin="362,70,0,0" VerticalAlignment="Top" Width="40" Padding="0" Name="labelStrokeThicknessArea" VerticalContentAlignment="Top">Area</Label>
        <Label Margin="412,30,0,0" Name="labelStrokeThicknessPointValue" HorizontalAlignment="Left" Width="30" Padding="0" Background="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="Black" Height="16" VerticalAlignment="Top"></Label>
        <Label HorizontalAlignment="Left" Margin="412,50,0,0" Name="labelStrokeThicknessLineValue" Width="30" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="1" Height="16" VerticalAlignment="Top" Panel.ZIndex="1"></Label>
        <Label Height="16" HorizontalAlignment="Left" Margin="412,70,0,0" Name="labelStrokeThicknessAreaValue" Padding="0" VerticalAlignment="Top" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="1" Panel.ZIndex="1"></Label>
        <Label Height="20" Margin="342,95,0,0" Name="labelPoints" VerticalAlignment="Top" Padding="0" HorizontalAlignment="Left" Width="266">Points:</Label>
        <Canvas HorizontalAlignment="Left" Margin="417,120,0,0" Name="canvasPointSymbols" Width="5" Height="5" VerticalAlignment="Top" Panel.ZIndex="0" />
        <Label HorizontalAlignment="Left" Margin="362,115,0,0" Name="labelPointSymbol" Padding="0" VerticalContentAlignment="Top" Width="40" Height="20" VerticalAlignment="Top">Symbol</Label>
        <ComboBox HorizontalAlignment="Left" Margin="460,111,0,0" Name="comboBoxPointSymbols" Width="120" Padding="5,2,0,0" Focusable="False" SelectionChanged="comboBoxPointSymbols_SelectionChanged" Height="20" VerticalAlignment="Top" VerticalContentAlignment="Top" />
        <Label HorizontalAlignment="Left" Margin="362,135,0,0" Name="labelPointSymbolSize" Padding="0" VerticalContentAlignment="Top" Width="40" Height="20" VerticalAlignment="Top">Size</Label>
        <Label Background="White" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="412,135,0,0" Name="labelPointSymbolSizeValue" Padding="0" VerticalContentAlignment="Center" Width="30" Height="16" VerticalAlignment="Top" />
        <Slider HorizontalAlignment="Left" Margin="460,137,0,0" Name="sliderPointSymbolSize" Width="120" ValueChanged="sliderPointSymbolSize_ValueChanged" MouseDoubleClick="sliderPointSymbolSize_MouseDoubleClick" Height="10" VerticalAlignment="Top" />
        <Label Height="20" HorizontalAlignment="Left" Margin="342,165,0,0" x:Name="labelSampleOffTransparency" VerticalAlignment="Top" Width="266" Padding="0" Content="Switched off sample opacity:"/>
        <Slider Height="10" Margin="460,188,0,0" x:Name="sliderSampleOffTransparencySample" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" ValueChanged="sliderSampleOffTransparencySample_ValueChanged" MouseDoubleClick="sliderSampleOffTransparencySample_MouseDoubleClick" Cursor="Hand" Panel.ZIndex="1" />
        <Label Margin="444,185,0,0" x:Name="labelSampleOffTransparencySample" HorizontalAlignment="Left" Width="10" Padding="0" VerticalContentAlignment="Top" Height="16" VerticalAlignment="Top" Content="%" RenderTransformOrigin="6.35,0.469"/>
        <Label Margin="412,185,0,0" x:Name="labelSampleOffTransparencySampleValue" Content="" HorizontalAlignment="Left" Width="30" Padding="0" Background="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="Black" Height="16" VerticalAlignment="Top"/>
        <CheckBox Height="20" Margin="32,286,0,0" Name="checkBoxAreaFrame" Padding="5,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="287">Save region only (show frame)</CheckBox>
        <Label Margin="342,266,0,0" Name="labelFrame" Padding="0" IsTabStop="False" HorizontalAlignment="Left" Width="266" Height="20" VerticalAlignment="Top">Frame:</Label>
        <Label Height="20" HorizontalAlignment="Left" Margin="362,284,0,0" Name="labelWidth" Padding="0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="40">Width</Label>
        <Label Margin="460,284,0,0" Name="labelHeight" Padding="0" VerticalContentAlignment="Center" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="40">Height</Label>
        <TextBox HorizontalAlignment="Left" Margin="410,284,0,0" Name="textBoxWidth" Width="32" Height="20" VerticalAlignment="Top" TextChanged="textBoxWidth_TextChanged" VerticalContentAlignment="Top" />
        <TextBox Margin="508,284,0,0" Name="textBoxHeight" VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" Width="32" TextChanged="textBoxWidth_TextChanged" VerticalContentAlignment="Top" />
        <Label HorizontalAlignment="Left" Margin="342,215,0,0" Name="labelViewer" Width="266" Padding="0" Height="20" VerticalAlignment="Top">MapMode-Viewer:</Label>
        <RadioButton Height="16" HorizontalAlignment="Left" Margin="362,240,0,0" Name="radioButtonGoogle" VerticalAlignment="Top" Width="100">Google Maps</RadioButton>
        <RadioButton Height="16" HorizontalAlignment="Left" Margin="460,240,0,0" Name="radioButtonOSM" VerticalAlignment="Top" Width="112" IsChecked="True">Open Street Maps</RadioButton>
        <Button Height="22" Margin="515,375.98,0,0" Name="buttonInfo" VerticalAlignment="Top" Click="buttonInfo_Click" HorizontalAlignment="Left" Width="65">Info</Button>
        <ComboBox Focusable="False" Height="20" HorizontalAlignment="Left" Margin="460,330,0,0" Name="comboBoxGpsBaudrates" Padding="5,2,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBoxGpsBaudrates_SelectionChanged" VerticalContentAlignment="Top" />
        <Label Height="20" HorizontalAlignment="Left" Margin="342,314,0,0" Name="labelGps" Padding="0" VerticalAlignment="Top" Width="266">GPS:</Label>
        <Label Height="20" HorizontalAlignment="Left" Margin="362,334,0,0" Name="labelBaudrate" Padding="0" VerticalAlignment="Top" VerticalContentAlignment="Top" Width="92">Baudrate</Label>
        <Label Height="20" Margin="13,314,0,0" Name="labelGpsTrack" Padding="0" VerticalAlignment="Top" VerticalContentAlignment="Top" HorizontalAlignment="Left" Width="324">GPS Track:</Label>
        <CheckBox Height="20" Margin="32,334,0,0" Name="checkBoxGpsTrack" Padding="5,0,0,0" SnapsToDevicePixels="False" VerticalAlignment="Top" HorizontalAlignment="Left" Width="304">Track GPS data when active</CheckBox>
        <Grid Height="61" Margin="12,25,0,0" Name="gridShapeFileReadFormat" VerticalAlignment="Top" HorizontalAlignment="Left" Width="324">
            <RadioButton Margin="20,23,0,0" Name="radioButtonShapeGeo" HorizontalAlignment="Left" Width="116" Height="16" VerticalAlignment="Top" VerticalContentAlignment="Top">Geographic / GK</RadioButton>
            <RadioButton Margin="20,5,0,40" Name="radioButtonUTM" HorizontalAlignment="Left" Width="116" Checked="radioButtonUTM_Checked" Unchecked="radioButtonUTM_Unchecked">UTM</RadioButton>
            <Label Margin="150,5,0,0" Name="labelUtmZone" Padding="0" VerticalContentAlignment="Top" HorizontalAlignment="Left" Width="107" Height="16" VerticalAlignment="Top">UTM zone (1-60):</Label>
            <Label Margin="150,23,0,0" Name="labelUtmHemi" Padding="0" VerticalContentAlignment="Top" Height="16" VerticalAlignment="Top">Hemisphere (N/S):</Label>
            <TextBox HorizontalAlignment="Left" Margin="260,1,0,0" Name="textBoxUtmZone" Width="29" Height="18" VerticalAlignment="Top" VerticalContentAlignment="Top" Padding="0" TextChanged="textBoxUtmZone_TextChanged" />
            <TextBox HorizontalAlignment="Left" Margin="260,21,0,0" Name="textBoxUtmHemi" Width="29" Height="18" VerticalAlignment="Top" VerticalContentAlignment="Top" Padding="0" TextChanged="textBoxUtmHemi_TextChanged" />
            <CheckBox Content="Split into single objects" Height="19" HorizontalAlignment="Left" Margin="20,42,0,0" Name="checkBoxSplitShapes" VerticalAlignment="Top" Width="269" Padding="3,0,0,0" />
        </Grid>
    </Grid>
</Window>
