<Window x:Class="WpfSamplingPlotPage.SelectAttribute"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SelectAttribute" Height="247" Width="Auto" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignWidth="253" SizeToContent="WidthAndHeight">
    <Grid Height="Auto" Width="Auto">
        <Button Content="OK" Margin="0,0,12,12" Name="buttonOK" HorizontalAlignment="Right" Width="50" Click="buttonOK_Click" Height="22" VerticalAlignment="Bottom" />
        <Label Content="Select description attributes, e.g.:" Height="28" Margin="15,0,17,0" Name="labelSelectAttribute" VerticalAlignment="Top" />
        <StackPanel Margin="20,29,12,144" Name="stackPanelSelectAttribute" />
        <Label x:Name="labelAssignAttribute" Content="Assign selected attributes to ID or Text:" Margin="15,0,13,113" VerticalAlignment="Bottom"/>
        <Button Content="ID" Margin="20,0,0,85" x:Name="buttonID" HorizontalAlignment="Left" VerticalContentAlignment="Center" Width="30" Click="buttonID_Click" Height="23" VerticalAlignment="Bottom" />
        <TextBox x:Name="textBoxID" Margin="55,0,10,85" TextWrapping="Wrap" Height="23" VerticalAlignment="Bottom" IsEnabled="False"/>
        <Button Content="Text" Margin="20,0,0,60" x:Name="buttonText" HorizontalAlignment="Left" VerticalContentAlignment="Center" Width="30" Click="buttonText_Click"  Height="23" VerticalAlignment="Bottom" />
        <TextBox x:Name="textBoxText" Margin="55,0,10,60" TextWrapping="Wrap" Height="23" VerticalAlignment="Bottom" IsEnabled="False"/>
        <Label Content="Separator string:" Margin="15,0,56,31" Name="labelSeparatorString" Height="28" VerticalAlignment="Bottom" />
        <TextBox Height="23" Margin="20,0,68,11" Name="textBoxSeparatorString" VerticalAlignment="Bottom" />
    </Grid>
</Window>
