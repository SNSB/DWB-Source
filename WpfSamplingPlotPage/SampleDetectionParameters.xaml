<Window x:Class="WpfSamplingPlotPage.SampleDetectionParameters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sample Detection Parameters" Height="265" Width="736">
    <Grid Background="Cornsilk" ClipToBounds="True" Name="gridControlParameters" Margin="0,0,2,0">
        <Label Margin="12,10,0,0" Name="labelAdjust" HorizontalAlignment="Left" Width="400" Padding="0" VerticalContentAlignment="Top" Height="16" VerticalAlignment="Top">Adjust minimum and maximum color values:</Label>
        <Label Margin="20,41,0,0" Name="labelRed" HorizontalAlignment="Left" Width="40" Padding="0" VerticalContentAlignment="Top" Height="16" VerticalAlignment="Top">Red</Label>
        <Label Margin="20,61,0,0" Name="labelGreen" HorizontalAlignment="Left" Width="40" Padding="0" Height="16" VerticalAlignment="Top" VerticalContentAlignment="Top">Green</Label>
        <Label Margin="20,81,0,0" Name="labelBlue" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Padding="0" VerticalContentAlignment="Top">Blue</Label>
        <Label Margin="20,101,0,0" Name="labelGrey" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Padding="0" VerticalContentAlignment="Top">Grey</Label>
        <Slider Height="10" Margin="79,44,0,0" Name="sliderRedMin" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" ValueChanged="sliderRedMin_ValueChanged" Cursor="Hand" Panel.ZIndex="1" Maximum="255" />
        <Slider Height="10" Margin="79,64,0,0" Name="sliderGreenMin" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" ValueChanged="sliderGreenMin_ValueChanged" Panel.ZIndex="1" Maximum="255" />
        <Slider Height="10" Margin="79,84,0,0" Name="sliderBlueMin" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" ValueChanged="sliderBlueMin_ValueChanged" Panel.ZIndex="1" Maximum="255" />
        <Slider Height="10" Margin="79,104,0,0" Name="sliderGreyMin" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" ValueChanged="sliderGreyMin_ValueChanged" Panel.ZIndex="1" Maximum="255" />
        <Slider Height="10" Margin="449,44,0,0" Name="sliderRedMax" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" ValueChanged="sliderRedMax_ValueChanged" Cursor="Hand" Panel.ZIndex="1" Maximum="255" />
        <Slider Height="10" Margin="449,64,0,0" Name="sliderGreenMax" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" ValueChanged="sliderGreenMax_ValueChanged" Panel.ZIndex="1" Maximum="255" />
        <Slider Height="10" Margin="449,84,0,0" Name="sliderBlueMax" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" ValueChanged="sliderBlueMax_ValueChanged" Panel.ZIndex="1" Maximum="255" />
        <Slider Height="10" Margin="449,104,0,0" Name="sliderGreyMax" VerticalAlignment="Top" HorizontalAlignment="Left" Width="256" ValueChanged="sliderGreyMax_ValueChanged"  Panel.ZIndex="1" Maximum="255" />
        <Label Margin="354,41,0,0" Name="labelRedMinValue" HorizontalAlignment="Left" Width="30" Padding="0" Background="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="Black" Height="16" VerticalAlignment="Top" Content="0"></Label>
        <Label Margin="354,61,0,0" Name="labelGreenMinValue" HorizontalAlignment="Left" Width="30" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="1" Height="16" VerticalAlignment="Top" Panel.ZIndex="1" Content="0"></Label>
        <Label Margin="354,81,0,0" Name="labelBlueMinValue" Height="16" HorizontalAlignment="Left" Padding="0" VerticalAlignment="Top" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="1" Panel.ZIndex="1" Content="0"></Label>
        <Label Margin="398,41,0,0" Name="labelRedMaxValue" HorizontalAlignment="Left" Width="30" Padding="0" Background="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="Black" Height="16" VerticalAlignment="Top" Content="255"></Label>
        <Label Margin="398,61,0,0" Name="labelGreenMaxValue" HorizontalAlignment="Left" Width="30" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="1" Height="16" VerticalAlignment="Top" Panel.ZIndex="1" Content="255"></Label>
        <Label Margin="398,81,0,0" Name="labelBlueMaxValue" Height="16" HorizontalAlignment="Left" Padding="0" VerticalAlignment="Top" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="1" Panel.ZIndex="1" Content="255"></Label>
        <Label Margin="21,131,0,0" Name="labelMinDistance" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Padding="0" VerticalContentAlignment="Top">Minimum point distance:</Label>
        <TextBox Margin="176,130,0,0" Name="textBoxMinDistance" VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" Width="32" Padding="0" TextChanged="textBoxNumeric_TextChanged" VerticalContentAlignment="Top" Background="White" BorderBrush="Black" BorderThickness="1" Text="3"/>
        <Label Margin="21,191,0,0" Name="labelID" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Padding="0" VerticalContentAlignment="Top">Identifier text:</Label>
        <TextBox Margin="110,190,0,0" Name="textBoxID" VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" Width="100" Padding="0" VerticalContentAlignment="Top" Background="White" BorderBrush="Black" BorderThickness="1" Text="Sample"/>
        <Label Margin="221,191,0,0" Name="labelNumber" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Width="84" Padding="0" VerticalContentAlignment="Top">Enumeration:</Label>
        <TextBox Margin="310,190,0,0" Name="textBoxNumber" VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" Width="100" Padding="0" TextChanged="textBoxNumeric_TextChanged"  VerticalContentAlignment="Top" Background="White" BorderBrush="Black" BorderThickness="1" Text="00001"/>
        <Label Margin="354,101,0,0" Name="labelColorMin" Height="16" HorizontalAlignment="Left" Padding="0" VerticalAlignment="Top" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="1" Panel.ZIndex="1" Content=""></Label>
        <Label Margin="398,101,0,0" Name="labelColorMax" Height="16" HorizontalAlignment="Left" Padding="0" VerticalAlignment="Top" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" BorderBrush="Black" BorderThickness="1" Panel.ZIndex="1" Content=""></Label>
        <Label Margin="354,121,0,0" Name="labelColorSlide" Height="16" HorizontalAlignment="Left" Padding="0" VerticalAlignment="Top" Width="74" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1" Panel.ZIndex="1" Content="">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Button Height="22" Margin="560,187.98,0,0" Name="buttonOK" VerticalAlignment="Top" Click="buttonOK_Click" IsDefault="True" HorizontalAlignment="Left" Width="65">OK</Button>
        <Button Height="22" Margin="640,187.931,0,0" Name="buttonCancel" VerticalAlignment="Top" Click="buttonCancel_Click" IsCancel="True" HorizontalAlignment="Left" Width="65">Cancel</Button>
        <CheckBox x:Name="checkBoxSeparateSamples" Content="Create separate samples" HorizontalAlignment="Left" Margin="21,160.832,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.504,1.189"/>
    </Grid>
</Window>
