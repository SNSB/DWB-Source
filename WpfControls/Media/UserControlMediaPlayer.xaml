<UserControl x:Class="WpfControls.Media.UserControlMediaPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControls.Media"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel MinHeight="60" MinWidth="80">
        <MediaElement Margin="0,0,0,0" Name="mediaPlayer" MinHeight="60" MinWidth="80" Stretch="Fill" LoadedBehavior="Manual" />
    </StackPanel>
</UserControl>
